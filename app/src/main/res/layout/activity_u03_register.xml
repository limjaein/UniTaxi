<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.jaein.unitaxi.u03_Register_Activity">

    <!--<ImageView-->
        <!--android:layout_width="150dp"-->
        <!--android:layout_height="150dp"-->
        <!--android:src="@drawable/login"/>-->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/JoinName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="이름"
            android:textSize="15dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:onClick="checkName"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/JoinId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="아이디"
            android:textSize="15dp"
            android:onClick="checkId" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"/>
    </LinearLayout>



        <EditText
            android:id="@+id/JoinPass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="비밀번호"
            android:textSize="15dp"/>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/selectedText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint=" 대학교 선택"
            android:textSize="15dp"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="50dp"
            android:layout_height="40dp"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="성별:"
            android:textSize="15dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:hint="남"
                android:textSize="15dp"/>

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:hint="여"
                android:textSize="15dp"/>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="회원가입 완료"
        android:onClick="RegisterToLogin"/>

</LinearLayout>
